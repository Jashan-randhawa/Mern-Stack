            <div class="location">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12 ,2Z"></path>
      </svg>
              <p>Sirsa, India</p>
            </div>
            <div class="stats">
              <div class="col-4">
                <h4>20</h4>
                <p>Reviews</p>
              </div>
              <div class="col-4">
                <h4>10</h4>
                <p>Communities</p>
              </div>
              <div class="col-4">
                <h4>100</h4>
                <p>Discussions</p>
              </div>
            </div>          
            <button type="button" class="btn btn-primary btn-lg" style="
            width: 120px;
            height: 60px;
            border-radius: 35px;
            background-color: red;
            text-align: center;" ><h1>Logout</h1></button>
            <form action="/upload" method="post" enctype="multipart/form-data" >
              <input type="file" name="file" >
              <input type="text" name="imagecaption" placeholder="Image Capiton">
              <button type="submit" >Upload</button>
              </form>
          </div>

        </header>
      </section>
      <div class="container" >
        <div class="cards flex">
          <% user.posts.forEach(function(post){ %>
            <div class="card" style="width: 18rem;margin: 12px;">
              <img class="card-img-top" src="/images/uploads/<%= post.Image %>" alt="Card image cap" style="height: 16rem; width: 16rem;" >
              <div class="card-body">
                <h5 class="card-title"> <h1><%=post.postText %></h1></h5>
                <p class="card-text"></p>
                <a href="#" class="btn btn-primary"></a>
              </div>
            </div>
          <% }) %>
          
        </div>
      </div>

